        "content": "We set up a simple todo app using React and TypeScript.\n\n
        <boltArtifact id=\"todo-app\" title=\"Todo App in React and TypeScript\">\n  
                <boltAction type=\"file\" filePath=\"src/Todo.tsx\">\n    
                        import React, { useState } from 'react';\n\n    interface Todo {\n      id: number;\n      text: string;\n      done: boolean;\n    }\n\n    const TodoApp = () => {\n      const [todos, setTodos] = useState<Todo[]>([]);\n      const [newTodo, setNewTodo] = useState('');\n\n      const addTodo = () => {\n        if (newTodo.trim() === '') return;\n        setTodos([...todos, { id: Date.now(), text: newTodo, done: false }]);\n        setNewTodo('');\n      };\n\n      const toggleTodo = (id: number) => {\n        setTodos(\n          todos.map((todo) =>\n            todo.id === id ? { ...todo, done: !todo.done } : todo\n          )\n        );\n      };\n\n      const removeTodo = (id: number) => {\n        setTodos(todos.filter((todo) => todo.id !== id));\n      };\n\n      return (\n        <div className=\"min-h-screen bg-gray-100 flex items-center justify-center\">\n          <div className=\"w-1/2 p-4 bg-white shadow-md rounded\">\n            <h1 className=\"text-2xl font-bold mb-4\">Todo App</h1>\n            <input\n              className=\"w-full p-2 border border-gray-300 rounded mb-4\"\n              type=\"text\"\n              value={newTodo}\n              onChange={(e) => setNewTodo(e.target.value)}\n              placeholder=\"Add new todo\"\n            />\n            <button\n              className=\"p-2 bg-blue-500 text-white rounded mb-4\"\n              onClick={addTodo}\n            >\n              Add Todo\n            </button>\n            <ul>\n              {todos.map((todo) => (\n                <li\n                  key={todo.id}\n                  className={`flex justify-between p-2 border-b border-gray-300 ${\n                    todo.done ? 'text-gray-500' : ''\n                  }`}\n                >\n                  <span>{todo.text}</span>\n                  <div className=\"flex justify-end\">\n                    <button\n                      className=\"p-2 bg-green-500 text-white rounded mx-2\"\n                      onClick={() => toggleTodo(todo.id)}\n                    >\n                      {todo.done ? 'Undo' : 'Done'}\n                    </button>\n                    <button\n                      className=\"p-2 bg-red-500 text-white rounded\"\n                      onClick={() => removeTodo(todo.id)}\n                    >\n                      Remove\n                    </button>\n                  </div>\n                </li>\n              ))}\n            </ul>\n          </div>\n        </div>\n      );\n    };\n\n    export default TodoApp;\n 
                </boltAction>\n 
                
                <boltAction type=\"file\" filePath=\"src/main.tsx\">\n    import { StrictMode } from 'react';\n    import { createRoot } from 'react-dom/client';\n    import TodoApp from './Todo.tsx';\n    import './index.css';\n\n    createRoot(document.getElementById('root')!).render(\n      <StrictMode>\n        <TodoApp />\n      </StrictMode>\n    );\n  
                </boltAction>\n  
                <boltAction type=\"shell\">\n    npm run dev\n  </boltAction>\n</boltArtifact>"
